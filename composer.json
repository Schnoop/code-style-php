{
    "name": "antwerpes/code-style-php",
    "description": "ESC configuration for PHP projects",
    "keywords": [
        "antwerpes",
        "code-style-php"
    ],
    "homepage": "https://github.com/antwerpes/code-style-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Elisha Witte",
            "email": "elisha.witte@antwerpes.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "slevomat/coding-standard": "^7.0",
        "spatie/ray": "^1.28",
        "symplify/coding-standard": "^10.0",
        "symplify/easy-coding-standard": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Antwerpes\\CodeStyle\\": "src"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
